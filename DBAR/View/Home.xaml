<UserControl x:Class="DBAR.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DBAR.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622">


	<Grid>

		<Border CornerRadius="0,20,20,0" Margin="0,5,5,0">

			<Image Source="/Images/turbo_bolt.png"
                   Stretch="Uniform" VerticalAlignment="Bottom" />

		</Border>
		<TextBlock Text="DBAR"
                   Foreground="#FFFFFF"
                   FontSize="38"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="/Fonts/#Rubik Medium"
                   Margin="40,52,0,0" />
		<TextBlock
                   Foreground="#FFFFFF"
                   FontSize="24"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="/Fonts/#Rubik Small"
                   Margin="60,102,0,0" ><Run Text="Complete Home Control"/><LineBreak/><Run Text="at Your Fingerprints"/></TextBlock>


	</Grid>
</UserControl>
